apiVersion: v1
kind: Service
metadata:
  name: hostping-service-backend
  labels:
    app: hostping
    layer: backend
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8080
  selector:
    app: hostping
    layer: backend
  type: NodePort


---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: hostping-deployment-backend
  labels:
    app: hostping
    layer: backend
spec:
  selector:
    matchLabels:
      app: hostping
      layer: backend
  replicas: 2
  template:
    metadata:
      labels:
        app: hostping
        layer: backend
    spec:
      containers:
      - name: hostping-backend
        image: pulgupta/hostping
        ports:
        - containerPort: 8080
        
---

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: hostping-ingress-backend
spec:
  rules:
  - http:
      paths:
      - path: /ping
        backend:
          serviceName: hostping-service-backend
          servicePort: 80
