apiVersion: v1
kind: Service
metadata:
  name: hostping
  labels:
    run: hostping
spec:
  ports:
  - port: 80
    protocol: TCP
    targetPort: 8080
  selector:
    run: hostping
  type: NodePort


---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: hostping
spec:
  selector:
    matchLabels:
      run: hostping
  replicas: 2
  template:
    metadata:
      labels:
        run: hostping
    spec:
      containers:
      - name: hostping
        image: pulgupta/hostping
        ports:
        - containerPort: 8080
        
---

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: hostping
spec:
  rules:
  - http:
      paths:
      - path: /ping
        backend:
          serviceName: hostping
          servicePort: 80
